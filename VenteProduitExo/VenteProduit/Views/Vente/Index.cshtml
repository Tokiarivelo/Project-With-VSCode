@model IEnumerable<VenteProduit.Models.Vente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Achats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Achats.AchatId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produit.ProduitName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VenteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VenteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VenteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
