@model IEnumerable<VenteProduit.Models.Achat>

@{
    ViewData["Title"] = "Index";
}

<h1>Li</h1>

<p>
    <a asp-action="Create">Acheter</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateAchat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateAchat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clients.ClientName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AchatId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AchatId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AchatId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
